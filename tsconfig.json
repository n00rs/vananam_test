{
    "compilerOptions": {
      "types": ["node"],
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2018",
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": ".",
      "outDir": "build",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "listFiles": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true
    },
    "lib": ["es2018"],
    "include": ["./libs/**/*", "./microservices/**/*"],
    "exclude": [
      "node_modules",
      "./libs/**/*.spec.ts"
    ],
    "presets": ["es2018"]
  }